<%# add navigation links to this file %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% Category.all.each do |cat| %>
      <li><%= link_to cat.name.titleize, storefront_index_path(cat_id: cat.id) %></li>
    <% end %>
    <li class="separator"></li>
    <li><%= link_to "All Products", storefront_index_path %></li>
  </ul>
</li>

<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Backroom <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <li><%= link_to "Brands", brands_path %></li>
    <li><%= link_to "Categories", categories_path %></li>
    <li><%= link_to "Products", products_path %></li>
  </ul>
</li>
</ul>
<ul class="nav navbar-nav navbar-right">
<% if user_signed_in? %>
  <li><%= link_to fa_icon('cog', text: 'Account'), edit_user_registration_path %></li>
  <li><%= link_to fa_icon('sign-out', text: 'Sign out'), destroy_user_session_path, :method=>'delete' %></li>
<% else %>
  <li><%= link_to fa_icon('sign-in', text: 'Sign in'), new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
